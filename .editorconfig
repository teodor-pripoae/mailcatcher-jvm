# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[**]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true

[**.{yml,yaml,md}]
insert_final_newline = true
indent_style = space
indent_size = 2

[{BUILD.bazel,*.bzl}]
insert_final_newline = true
indent_style = space
indent_size = 4

[{*.kt}]
insert_final_newline = true
indent_style = space
indent_size = 4
